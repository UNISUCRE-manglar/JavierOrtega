<div class="container-fluid py-4">
  <div class="row">
    <div class="row mt-4">
      <div class="col-lg-7 mb-lg-0 mb-4">
        <div class="card z-index-2 h-100">
          <div class="card-header pb-0 pt-3 bg-transparent">
            <h4>REGISTRAR SENSOR:</h4>
            <div class="card-body">
              <form action="/guardarsensor" method="post">
              <div class="form-group">
                <input type="String" class="form-control " name="nombre" placeholder="Nombre del sensor">
              </div>
              <div class="form-group">
                <input type="String" class="form-control" name="ubicacion" placeholder="Ubicacion">
              </div>
              <div class="form-group">
                <input type="String" class="form-control" name="tipo" placeholder="Tipo">
              </div>
               <div class="form-group">
                <input type="Number" class="form-control" name="latitud" placeholder="latitud">
              </div>
               <div class="form-group">
                <input type="Number" class="form-control" name="longitud" placeholder="longitud">
              </div>
               <div class="form-group">
                <input type="Number" class="form-control" name="valor" placeholder="valor">
              </div>
               <div class="form-group">
                <input type="Number" class="form-control" name="codigo" placeholder="codigo">
              </div>
              <button class="btn btn-primary btn-block">
                Registrar 
              </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

